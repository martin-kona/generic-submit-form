<aura:component controller="RecordSubmissionFormController" implements="force:appHostable,force:lightningQuickActionWithoutHeader,force:hasRecordId">
    
    <aura:attribute name="recordId" type="String"/>
    <aura:attribute name="formConfiguration" type="List"/>
    
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <c:ApexCalloutUtils aura:id="ApexCalloutUtils"/>
    
	<aura:iteration items="{!v.formConfiguration}" var="formSection">		
		<meter value="{!formSection /5}"/><br/>
	</aura:iteration>

</aura:component>